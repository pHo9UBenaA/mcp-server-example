{
  "tasks": {
    "start": "deno run src/server.ts",
    "dev": "deno run --watch src/server.ts",
    "test": "deno test .",
    "format": "deno fmt",
    "lint": "deno lint",
    "check": "deno check .",
    "executer": "deno --no-lock -A",
    "up:latest": "deno outdated --update --latest"
  },
  "imports": {
    "@modelcontextprotocol/sdk": "npm:@modelcontextprotocol/sdk@^1.9.0",
    "@std/assert": "jsr:@std/assert@^1.0.12"
  },
  "compilerOptions": {
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "strict": true
  }
}
